{
  "name": "electron-base",
  "version": "1.0.0",
  "description": "Base Electron App",
  "repository": {
    "type": "git",
    "url": "https://github.com/david-mk-lawrence/electron-base"
  },
  "main": "./.webpack/main",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --config ./.prettierrc.js --write './src/**/*.{js,jsx,scss,json,ts,tsx}' './*.js'",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "sideEffects": [
    "*.css"
  ],
  "browserslist": [
    "last 2 electron version"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.63",
    "@tailwindcss/forms": "^0.5.2",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/graceful-fs": "^4.1.5",
    "@types/lodash": "^4.14.168",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/spotify-web-playback-sdk": "^0.1.12",
    "@types/write-file-atomic": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.0",
    "electron": "^16.0.7",
    "electron-reloader": "^1.2.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "node-loader": "^2.0.0",
    "postcss-loader": "^5.2.0",
    "prettier": "^2.2.1",
    "style-loader": "^2.0.0",
    "tailwindcss": "^3.0.24",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.0",
    "ajv": "^8.0.3",
    "axios": "^0.25.0",
    "electron-log": "^4.4.5",
    "electron-squirrel-startup": "^1.0.0",
    "fork-ts-checker-webpack-plugin": "^6.5.0",
    "graceful-fs": "^4.2.6",
    "keytar": "^7.7.0",
    "lodash": "^4.17.21",
    "postcss": "^8.4.14",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "react-router-dom": "^6.2.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "write-file-atomic": "^3.0.3"
  },
  "config": {
    "forge": {
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "devContentSecurityPolicy": "`default-src 'self' 'unsafe-inline' data:; script-src 'self' 'unsafe-eval' 'unsafe-inline' data:`",
            "mainConfig": "./webpack.electron.js",
            "renderer": {
              "config": "./webpack.react.js",
              "entryPoints": [
                {
                  "name": "main_window",
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/index.tsx",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ],
      "packagerConfig": {
        "protocols": [
          {
            "name": "Electron Base",
            "schemes": [
              "electron-base"
            ]
          }
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_base"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "mimeType": [
              "x-scheme-handler/electron-base"
            ]
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
